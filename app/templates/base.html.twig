<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="{{ asset('images/logo_quernel_auto.png') }}">
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/navbar.css') }}">
            <link rel="stylesheet" href="{{ asset('css/flash.css') }}">
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
            <script src="{{ asset('js/navbar.js') }}" defer></script>
        {% endblock %}
    </head>
    <body>
        <nav class="navbar">
            <div class="navbar-brand">
                <a href="{{ path('app_home') }}">
                    <img src="{{ asset('images/logo_quernel_auto.png') }}" alt="Quernel Auto Logo" class="navbar-logo">
                </a>
            </div>
            <div class="navbar-menu">
                <a href="{{ path('app_home') }}" class="nav-link">Accueil</a>
                <a href="#services" class="nav-link">Services</a>
                <a href="#process" class="nav-link">Processus</a>
                <a href="#vehicles" class="nav-link">Véhicules</a>
                <a href="#contact" class="nav-link">Contact</a>
                {% if app.user %}
                    <div class="nav-user">
                        <span class="nav-user-name">{{ app.user.firstname }}</span>
                        <a href="{{ path('app_logout') }}" class="nav-link nav-link-logout">
                            <i class="fas fa-sign-out-alt"></i> Déconnexion
                        </a>
                    </div>
                {% else %}
                    <a href="{{ path('app_login') }}" class="nav-link nav-link-login">
                        <i class="fas fa-sign-in-alt"></i> Connexion
                    </a>
                {% endif %}
            </div>
            <div class="navbar-burger">
                <span></span>
                <span></span>
                <span></span>
            </div>
        </nav>

        {% for label, messages in app.flashes %}
            <div class="flash-messages">
                {% for message in messages %}
                    <div class="flash-message flash-{{ label }}">
                        {{ message }}
                    </div>
                {% endfor %}
            </div>
        {% endfor %}

        {% block body %}{% endblock %}

        <script>
            // Auto-hide flash messages after 5 seconds
            document.addEventListener('DOMContentLoaded', function() {
                setTimeout(function() {
                    const flashMessages = document.querySelectorAll('.flash-message');
                    flashMessages.forEach(function(message) {
                        message.style.opacity = '0';
                        message.style.transition = 'opacity 0.5s ease-out';
                        setTimeout(function() {
                            message.remove();
                        }, 500);
                    });
                }, 5000);
            });
        </script>
    </body>
</html>
