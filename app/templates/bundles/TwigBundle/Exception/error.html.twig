{% extends 'base.html.twig' %}

{% block title %}Erreur {{ status_code }} - Quernel Auto{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/error.css') }}">
{% endblock %}

{% block body %}
    <div class="error-page-container">
        <div class="error-content error-generic">
            <div class="error-animation">
                <div class="error-icon">
                    <i class="fas fa-exclamation-triangle"></i>
                </div>
                <div class="error-code">{{ status_code }}</div>
            </div>
            
            <div class="error-message">
                <h1 class="error-title">{{ status_text }}</h1>
                
                <p class="error-description">
                    Une erreur inattendue s'est produite. 
                    Nos équipes ont été notifiées et travaillent à résoudre le problème.
                </p>
            </div>
            
            <div class="error-actions">
                <a href="{{ path('app_home') }}" class="btn btn-primary">
                    <i class="fas fa-home"></i>
                    Retour à l'accueil
                </a>
                <a href="{{ path('app_contact') }}" class="btn btn-secondary">
                    <i class="fas fa-envelope"></i>
                    Nous contacter
                </a>
            </div>
            
            {% if app.debug %}
                <div class="error-debug">
                    <h3>Informations de débogage</h3>
                    <div class="debug-info">
                        <p><strong>Code :</strong> {{ status_code }}</p>
                        <p><strong>Message :</strong> {{ status_text }}</p>
                        {% if exception is defined and exception %}
                            <p><strong>Exception :</strong> {{ exception.message }}</p>
                            <p><strong>Fichier :</strong> {{ exception.file }}:{{ exception.line }}</p>
                        {% endif %}
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %} 