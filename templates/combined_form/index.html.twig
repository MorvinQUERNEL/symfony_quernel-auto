{# Template de formulaire combiné inscription et préférences de Quernel Auto #}
{# Ce formulaire permet aux utilisateurs de s'inscrire et définir leurs préférences en une seule étape #}
{# Il inclut : informations personnelles, préférences véhicules, validation RGPD #}
{% extends 'base.html.twig' %}

{# Titre de la page pour le SEO #}
{% block title %}Inscription et Préférences - Quernel Auto{% endblock %}

{# Feuilles de style spécifiques au formulaire combiné #}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/combined_form.css') }}">
{% endblock %}

{# Contenu principal du formulaire combiné #}
{% block body %}
<div class="combined-form-container">
    <section class="form-card">
        {# En-tête du formulaire #}
        <header class="form-header">
            <h1>Inscription et Préférences</h1>
        </header>
        
        {# Début du formulaire Symfony #}
        {{ form_start(form) }}
        
        {# Section Informations personnelles #}
        <section class="form-section" aria-labelledby="personal-info-title">
            <h2 id="personal-info-title"><i class="fas fa-user"></i> Informations personnelles</h2>
            
            {# Ligne 1 : Prénom et nom #}
            <div class="form-row">
                <div class="form-group">
                    {{ form_label(form.firstname) }}
                    <span class="required-field">*</span>
                    {{ form_widget(form.firstname, {'attr': {'class': 'form-control'}}) }}
                    <div class="form-errors">{{ form_errors(form.firstname) }}</div>
                </div>
                <div class="form-group">
                    {{ form_label(form.lastname) }}
                    <span class="required-field">*</span>
                    {{ form_widget(form.lastname, {'attr': {'class': 'form-control'}}) }}
                    <div class="form-errors">{{ form_errors(form.lastname) }}</div>
                </div>
            </div>
            
            {# Ligne 2 : Email et mot de passe #}
            <div class="form-row">
                <div class="form-group">
                    {{ form_label(form.email) }}
                    <span class="required-field">*</span>
                    {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                    <div class="form-errors">{{ form_errors(form.email) }}</div>
                </div>
                <div class="form-group">
                    {{ form_label(form.plainPassword) }}
                    <span class="required-field">*</span>
                    {{ form_widget(form.plainPassword, {'attr': {'class': 'form-control'}}) }}
                    <div class="form-errors">{{ form_errors(form.plainPassword) }}</div>
                    <div class="help-text">Minimum 6 caractères</div>
                </div>
            </div>
            
            {# Adresse complète #}
            <div class="form-group">
                {{ form_label(form.address) }}
                <span class="required-field">*</span>
                {{ form_widget(form.address, {'attr': {'class': 'form-control'}}) }}
                <div class="form-errors">{{ form_errors(form.address) }}</div>
            </div>
            
            {# Ligne 3 : Ville et code postal #}
            <div class="form-row">
                <div class="form-group">
                    {{ form_label(form.city) }}
                    <span class="required-field">*</span>
                    {{ form_widget(form.city, {'attr': {'class': 'form-control'}}) }}
                    <div class="form-errors">{{ form_errors(form.city) }}</div>
                </div>
                <div class="form-group">
                    {{ form_label(form.postalCode) }}
                    <span class="required-field">*</span>
                    {{ form_widget(form.postalCode, {'attr': {'class': 'form-control'}}) }}
                    <div class="form-errors">{{ form_errors(form.postalCode) }}</div>
                </div>
            </div>
            
            {# Ligne 4 : Pays et téléphone #}
            <div class="form-row">
                <div class="form-group">
                    {{ form_label(form.country) }}
                    <span class="required-field">*</span>
                    {{ form_widget(form.country, {'attr': {'class': 'form-select'}}) }}
                    <div class="form-errors">{{ form_errors(form.country) }}</div>
                </div>
                <div class="form-group">
                    {{ form_label(form.phoneNumber) }}
                    <span class="required-field">*</span>
                    {{ form_widget(form.phoneNumber, {'attr': {'class': 'form-control'}}) }}
                    <div class="form-errors">{{ form_errors(form.phoneNumber) }}</div>
                </div>
            </div>
            
            {# Consentement RGPD obligatoire #}
            <div class="form-group">
                <div class="checkbox-simple">
                    {{ form_widget(form.rgpdConsent) }}
                    <label for="{{ form.rgpdConsent.vars.id }}">
                        J'accepte <a href="{{ path('app_politique_confidentialite') }}" target="_blank" rel="noopener noreferrer">la politique de confidentialité</a> et le traitement de mes données personnelles conformément au RGPD
                    </label>
                    <span class="required-field">*</span>
                </div>
                <div class="form-errors">{{ form_errors(form.rgpdConsent) }}</div>
            </div>
        </section>
        
        {# Section Préférences véhicules #}
        <section class="form-section" aria-labelledby="prefs-title">
            <h2 id="prefs-title"><i class="fas fa-car"></i> Vos préférences véhicules</h2>
            <p class="help-text mb-3">Ces informations nous permettront de vous proposer des véhicules correspondant à vos critères. Tous les champs sont optionnels.</p>
            
            {# Ligne 1 : Marque et modèle préférés #}
            <div class="form-row">
                <div class="form-group">
                    {{ form_label(form.prefereneceBrand) }}
                    {{ form_widget(form.prefereneceBrand, {'attr': {'class': 'form-control'}}) }}
                    <div class="form-errors">{{ form_errors(form.prefereneceBrand) }}</div>
                </div>
                <div class="form-group">
                    {{ form_label(form.preferenceModel) }}
                    {{ form_widget(form.preferenceModel, {'attr': {'class': 'form-control'}}) }}
                    <div class="form-errors">{{ form_errors(form.preferenceModel) }}</div>
                </div>
            </div>
            
            {# Ligne 2 : Année minimum et prix maximum #}
            <div class="form-row">
                <div class="form-group">
                    {{ form_label(form.minYear) }}
                    {{ form_widget(form.minYear, {'attr': {'class': 'form-control'}}) }}
                    <div class="form-errors">{{ form_errors(form.minYear) }}</div>
                </div>
                <div class="form-group">
                    {{ form_label(form.maxPrice) }}
                    {{ form_widget(form.maxPrice, {'attr': {'class': 'form-control'}}) }}
                    <div class="form-errors">{{ form_errors(form.maxPrice) }}</div>
                </div>
            </div>
            
            {# Type de carburant préféré #}
            <div class="form-group">
                {{ form_label(form.preferenceFuelType) }}
                {{ form_widget(form.preferenceFuelType, {'attr': {'class': 'form-select'}}) }}
                <div class="form-errors">{{ form_errors(form.preferenceFuelType) }}</div>
            </div>
        </section>
        
        {# Bouton de soumission du formulaire #}
        <button type="submit" class="submit-button">
            <i class="fas fa-check-circle"></i> Valider mon inscription et mes préférences
        </button>
        
        {# Fin du formulaire Symfony #}
        {{ form_end(form) }}
        
        {# Pied de page avec lien de connexion #}
        <footer class="text-center mt-3">
            <p>Déjà inscrit ? <a href="{{ path('app_login') }}">Connectez-vous</a></p>
        </footer>
    </section>
</div>
{% endblock %}

{# Scripts JavaScript pour la validation côté client #}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/combined_form.js') }}" defer></script>
{% endblock %} 